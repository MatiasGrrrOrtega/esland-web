---
import { getI18n } from "@/i18n/";

const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });
---

<div class="w-full relative h-screen lg:h-full md:aspect-video">
  <img
    class="absolute w-[1000px] [inset:0] z-10 m-auto"
    alt={i18n.VIDEO_ALT}
    src="/logo-home.svg"
  />
  <video
    class="w-full h-full object-cover object-top animate-ease-in-out animate-fade animate-duration-1000 cp-v"
    src="/video.webm"
    autoplay
    loop
    muted></video>
  <video
    class="absolute -bottom-48 blur-3xl -z-40"
    src="/video.webm"
    autoplay
    loop
    muted></video>
</div>